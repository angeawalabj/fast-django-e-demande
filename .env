# Variables d'environnement pour le projet Fast-Nati

# Clé secrète Django (génère une nouvelle clé sécurisée)
SECRET_KEY=your-secure-secret-key-here

# Mode débogage (True pour développement, False pour production)
DEBUG=True

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuration de la base de données (SQLite par défaut)
DATABASE_URL=sqlite:///db.sqlite3

# Configuration des emails
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Fast Natitingou <your-email@gmail.com>

# Configuration d'axes
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1